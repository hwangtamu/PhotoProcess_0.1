<UserControl x:Class="PhotoProcess.PhotoEdit.MainFuncUserCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="180" d:DesignWidth="480">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ButtonTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <StackPanel Name="panelImageOP" Grid.Row="2" Orientation="Horizontal">
            <Button Name="buttonChooseImage" IsEnabled="True" Grid.Row="2" Click="buttonChooseImage_Click" Content="Open"/>
            <Button Name="buttonEditImage" Grid.Row="2" Click="buttonEditImage_Click" Content="Image"/>
            <Button Name="buttonFilters"  Grid.Row="2" Click="buttonFilters_Click" Content="Filter" />
            <Button Name="buttonFrame" Grid.Row="2" Click="buttonFrame_Click" Content="Frame" />
        </StackPanel>
    </Grid>
</UserControl>